<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:carbon_insetColor="?attr/colorPrimary">

    <carbon.widget.LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/carbon_padding"
        android:orientation="vertical"
        android:visibility="gone"
        app:carbon_cornerRadius="10dp">


    </carbon.widget.LinearLayout>

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/carbon_padding"
        android:background="@color/carbon_red_600"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:carbon_cornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hello"
            android:textColor="@color/carbon_white"
            android:textSize="@dimen/carbon_avatarSize" />
    </carbon.widget.LinearLayout>


    <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@android:color/holo_red_dark"
        app:carbon_cornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hello"
            android:textColor="@color/carbon_white"
            android:textSize="@dimen/carbon_avatarSize" />


        <com.ntq.labelview.TriangleBackgroundView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <carbon.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:carbon_cornerRadius="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="@android:color/white" />
        </carbon.widget.RelativeLayout>
    </carbon.widget.RelativeLayout>
</carbon.widget.LinearLayout>